generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AuctionStatus {
  active
  inactive
}

model users {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String

  bids bids[]
}

model items {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  status      AuctionStatus

  bids bids[]
}

model bids {
  id      Int     @id @default(autoincrement())
  id_item Int
  id_user Int
  price   Decimal

  items items @relation(fields: [id_item], references: [id])
  users users @relation(fields: [id_user], references: [id])
}
