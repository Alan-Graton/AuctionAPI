generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AuctionStatus {
  active
  inactive
}

model Users {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String

  Bids Bids[]
}

model Items {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  status      AuctionStatus

  Bids Bids[]
}

model Bids {
  id      Int     @id @default(autoincrement())
  id_item Int
  id_user Int
  price   Decimal

  Items Items @relation(fields: [id_item], references: [id])
  Users Users @relation(fields: [id_user], references: [id])
}
